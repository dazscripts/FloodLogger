        ['username'] = plr.Name;
        ['content'] = "" ;
        ['embeds'] = {{
            ['title'] = 'üèä‚Äç‚ôÇÔ∏è | Escapee Obtained!';
            ['description'] = '';
            ['color'] = 0x00a0b9;
        }}
    })
end

